  "version": "0.2.0",
  "configurations": [
    {
      "name": "Host Watch & Preview Application",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "preview"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "preLaunchTask": "npm: build:watch"
    },
    {
      "name": "Host Dev Application",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
    }
  ]
}
